<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">
    <TextView
       android:id="@+id/opeation"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="#5c5c5c"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:textColor="#5c5c5c"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sqrt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_done_24"
                style="@style/Buttontop"/>
            <TextView
                android:id="@+id/extent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_superscript_24"
                style="@style/Buttontop"/>
            <TextView
                android:id="@+id/dellete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_backspace_24"
                style="@style/Buttontop"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/clear"
                android:text="C"
                android:textSize="45sp"
                android:textColor="#008080"/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/bracketLeft"
                android:text="("/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/bracketRight"
                android:text=")"/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/divide"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn7"
                android:text="7"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn8"
                android:text="8"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn9"
                android:text="9"/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/multiply"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn4"
                android:text="4"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn5"
                android:text="5"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn6"
                android:text="6"/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/minus"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn1"
                android:text="1"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn2"
                android:text="2"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn3"
                android:text="3"/>
            <TextView
                style="@style/Buttonoper"
                android:id="@+id/plus"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn00"
                android:text="00"/>
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btn0"
                android:text="0" />
            <TextView
                style="@style/Buttonnumber"
                android:id="@+id/btndot"
                android:text="." />
            <TextView
                style="@style/Buttonoper"
                android:text="="
                android:textColor="#008080"
                android:id="@+id/equally"
                android:textSize="55sp"
                android:background="@drawable/corner2"/>

        </LinearLayout>

     </LinearLayout>

</LinearLayout>